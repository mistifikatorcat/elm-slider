{
  "name": "next-elm",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "elm:make": "elm make src/Main.elm --output=public/elm.js",
    "watch:elm": "elm-live src/Main.elm --dir=public --pushstate -- --output=public/elm.js",
    "dev": "concurrently \"npm run watch:elm\" \"next dev\"",
    "build": "npm run elm:make && next build",
    "start": "next start"
  },
  "dependencies": {
    "next": "15.3.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.1.2",
    "elm": "^0.19.1-6",
    "elm-live": "^4.0.2",
    "sass": "^1.87.0",
    "typescript": "^5"
  }
}
